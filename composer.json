{
	"name": "byborg-engine/buddy-plugin-reindex",
	"description": "Manticore Buddy plugin for reindexing plain tables",
	"type": "library",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"Manticoresearch\\Buddy\\Plugin\\Reindex\\": "src/"
		}
	},
	"minimum-stability": "stable",
	"require": {
		"manticoresoftware/buddy-core": "dev-main"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.8",
		"slevomat/coding-standard": "^8.5",
		"squizlabs/php_codesniffer": "^3.7",
		"phpunit/phpunit": "^9.5"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
